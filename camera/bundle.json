  "component": {
    "name": "drivers_peripheral_camera",
    "subsystem": "hdf",
    "syscap": [ "" ],
    "adapter_system_type": ["standard"],
    "rom": "2440KB",
    "ram": "8500KB",
    "deps": {
      "components": [
        "graphic_standard",
        "hdf_core",
        "hiviewdfx_hilog_native",
        "multimedia_camera_standard",
        "samgr_standard",
        "display_device_driver",
        "ipc",
        "utils_base"
      ],
      "third_part": [
        "googletest"
      ]
    },
    "build": {
