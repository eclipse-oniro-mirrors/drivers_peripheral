            ],
            "header_base": "//drivers/peripheral/camera/interfaces/hdi_ipc/client/include"
          }
        },
        {
          "name": "//drivers/peripheral/camera/interfaces/metadata:metadata",
          "header": {
            "header_files": [
              "camera_device_ability_items.h",
              "camera_metadata_info.h",
              "camera_metadata_item_info.h",
              "camera_metadata_operator.h",
              "metadata_log.h",
              "metadata_utils.h"
            ],
            "header_base": "//drivers/peripheral/camera/interfaces/metadata/include"
          }
        }
      ]
    }
  }
}
