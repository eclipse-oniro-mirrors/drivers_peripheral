group("hdf_fuzztest_media_codec") {
  testonly = true
  deps = [
    "//drivers/peripheral/codec/test/fuzztest/omx_fuzzer/codecallocatebuffer_omx_fuzzer:fuzztest",
    "//drivers/peripheral/codec/test/fuzztest/omx_fuzzer/codecfreebuffer_omx_fuzzer:fuzztest",
