    "//drivers/peripheral/codec/test/fuzztest/omx_fuzzer/codecusebuffer_omx_fuzzer:fuzztest",
  ]

  OMX_IL_PATH = rebase_path(
          "//device/soc/${device_company}/${product_name}/hardware/omx_il")
  cmd = "if [ -f ${OMX_IL_PATH}/BUILD.gn ]; then echo true; else echo false; fi"
  HAVE_OMX_IL_PATH =
      exec_script("//build/lite/run_shell_cmd.py", [ cmd ], "value")

  if (HAVE_OMX_IL_PATH) {
    deps += [
      "//drivers/peripheral/codec/test/fuzztest/omx_fuzzer/codec_omx_fuzzer:fuzztest",
      "//drivers/peripheral/codec/test/fuzztest/omx_fuzzer/codeccomponentroleenum_omx_fuzzer:fuzztest",
      "//drivers/peripheral/codec/test/fuzztest/omx_fuzzer/codeccomponenttunnelrequest_omx_fuzzer:fuzztest",
      "//drivers/peripheral/codec/test/fuzztest/omx_fuzzer/codeccreatecomponent_omx_fuzzer:fuzztest",
      "//drivers/peripheral/codec/test/fuzztest/omx_fuzzer/codecgetconfig_omx_fuzzer:fuzztest",
      "//drivers/peripheral/codec/test/fuzztest/omx_fuzzer/codecgetextensionIndex_omx_fuzzer:fuzztest",
      "//drivers/peripheral/codec/test/fuzztest/omx_fuzzer/codecgetparameter_omx_fuzzer:fuzztest",
      "//drivers/peripheral/codec/test/fuzztest/omx_fuzzer/codecsendcommand_omx_fuzzer:fuzztest",
      "//drivers/peripheral/codec/test/fuzztest/omx_fuzzer/codecsetconfig_omx_fuzzer:fuzztest",
      "//drivers/peripheral/codec/test/fuzztest/omx_fuzzer/codecsetparameter_omx_fuzzer:fuzztest",
      "//drivers/peripheral/codec/test/fuzztest/omx_fuzzer/codecuseeglimage_omx_fuzzer:fuzztest",
    ]
  }
}
