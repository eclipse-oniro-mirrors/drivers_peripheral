group("hdf_fuzztest_media_codec_adapter") {
  testonly = true
  CODEC_OEM_PATH = rebase_path(
          "//device/soc/${device_company}/${product_name}/hardware/codec")
  cmd = "if [ -f ${CODEC_OEM_PATH}/BUILD.gn ]; then echo true; else echo false; fi"
  HAVE_CODEC_OEM_PATH =
      exec_script("//build/lite/run_shell_cmd.py", [ cmd ], "value")

  if (HAVE_CODEC_OEM_PATH) {
    deps = [
      "//drivers/peripheral/codec/test/fuzztest/adapter_fuzzer/codecallocatebuffer_adapter_fuzzer:fuzztest",
      "//drivers/peripheral/codec/test/fuzztest/adapter_fuzzer/codeccomponentroleenum_adapter_fuzzer:fuzztest",
      "//drivers/peripheral/codec/test/fuzztest/adapter_fuzzer/codeccomponenttunnelrequest_adapter_fuzzer:fuzztest",
      "//drivers/peripheral/codec/test/fuzztest/adapter_fuzzer/codeccreatecomponent_adapter_fuzzer:fuzztest",
      "//drivers/peripheral/codec/test/fuzztest/adapter_fuzzer/codecfreebuffer_adapter_fuzzer:fuzztest",
      "//drivers/peripheral/codec/test/fuzztest/adapter_fuzzer/codecgetcomponentcapabilitylist_adapter_fuzzer:fuzztest",
      "//drivers/peripheral/codec/test/fuzztest/adapter_fuzzer/codecgetconfig_adapter_fuzzer:fuzztest",
    ]
  }
}
