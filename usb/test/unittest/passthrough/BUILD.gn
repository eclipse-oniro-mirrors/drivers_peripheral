import("//build/test.gni")
import("./../../../usb.gni")

module_output_path = "drivers_peripheral_usb/drivers_peripheral_usb"

config("module_private_config") {
  visibility = [ ":*" ]

  include_dirs = [
    "include",
    "${usb_driver_path}/test/UsbSubTest",
    "${usb_driver_path}/utils/include",
  ]
}

ohos_unittest("test_feature_transfer") {
  sources = [
    "${usb_driver_path}/test/UsbSubTest/UsbSubTest.cpp",
    "src/usbd_transfer_test.cpp",
  ]

  include_dirs = [ "${usb_driver_path}/test/UsbSubTest" ]

  configs = [ ":module_private_config" ]

  deps = [
    "${usb_driver_path}/ddk:libusb_core",
    "${usb_driver_path}/hdi_service:libusb_device_interface_service_2.0",
    "${usb_driver_path}/hdi_service:libusb_host_interface_service_2.0",
  ]

  if (is_standard_system) {
    external_deps = [
      "drivers_interface_usb:libusb_proxy_2.0",
      "eventhandler:libeventhandler",
      "googletest:gtest_main",
      "hdf_core:libhdf_utils",
      "hilog:libhilog",
      "ipc:ipc_single",
      "safwk:system_ability_fwk",
    ]

    if (usb_samgr_enable) {
      external_deps += [ "samgr:samgr_proxy" ]

      if (defined(defines)) {
        defines += [ "USB_ENABLE_SAMGR" ]
      } else {
        defines = [ "USB_ENABLE_SAMGR" ]
      }
    }

    if (usb_c_utils_enable) {
      external_deps += [ "c_utils:utils" ]
    }
  } else {
    external_deps = [ "hilog:libhilog" ]
  }
  module_out_path = module_output_path
}
