import("//build/ohos.gni")

ohos_executable("clearplay_sample_media_key_system_factory") {
  include_dirs = [
    "./include",
    "./../../hdi_service/include/drm",
    "./../../hdi_service/include",
    "./../../hdi_service/common",
    "./../../interfaces/include/drm",
