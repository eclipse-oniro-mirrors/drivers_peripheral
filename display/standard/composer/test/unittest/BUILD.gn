import("//build/test.gni")

group("hdf_unittest_display") {
  testonly = true
  deps = [
    ":dispcomptest",
  ]
}

module_output_path = "hdf/display_composer"

config("module_private_config") {
  visibility = [ ":*" ]
}

ohos_static_library("disp_dev_hdi_test_common") {
  sources = [ "common/display_test_utils.cpp" ]
  include_dirs = [
    "include",
    "//foundation/communication/ipc/interfaces/innerkits/ipc_core/include",
    "//drivers/peripheral/display/interfaces/include",
    "//drivers/peripheral/base",
  ]
  output_name = "disp_dev_hdi_test_common"
  cflags = [
    "-DGRALLOC_GBM_SUPPORT",
    "-Wno-macro-redefined",
  ]

  deps = []

  external_deps = [
    "hiviewdfx_hilog_native:libhilog",
    "utils_base:utils",
    "drivers_interface_display:display_composer_idl_headers",
  ]
  subsystem_name = "hdf"
  part_name = "drivers_peripheral_display"
}

ohos_unittest("dispcomptest") {
  module_out_path = module_output_path
  sources = [
    "display_device/hdi_composition_check.cpp",
    "display_device/hdi_device_test.cpp",
    "display_device/hdi_test_device.cpp",
    "display_device/hdi_test_display.cpp",
    "display_device/hdi_test_layer.cpp",
  ]
  deps = [
    ":disp_dev_hdi_test_common",
    "//third_party/googletest:gtest_main",
  ]
  include_dirs = [
    "common",
    "//foundation/communication/ipc/interfaces/innerkits/ipc_core/include",
    "//drivers/peripheral/display/standard/utils/include",
    "//drivers/peripheral/base",
    "utils",
    ".",
  ]
  external_deps = [
    "hdf_core:libhdf_utils",
    "hiviewdfx_hilog_native:libhilog",
    "utils_base:utils",
    "hdf_core:libdisplay_buffer_hdi_impl",
    "hdf_core:libdisplay_composer_hdi_impl",
    "drivers_interface_display:display_buffer_idl_headers",
    "drivers_interface_display:display_composer_idl_headers",
  ]
  cflags = [ "-Wno-unused-function" ]
  subsystem_name = "hdf"
  part_name = "drivers_peripheral_display"
}
