import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
module_output_path = "hdf/display_composer"

ohos_fuzztest("CreateLayerFuzzTest") {
  module_out_path = module_output_path
  fuzz_config_file =
    "//drivers/peripheral/display/standard/composer/test/fuzztest/CreateLayer_fuzzer"
  include_dirs = [
    "//drivers/hdf_core/adapter/uhdf2/model/display/base/hdifd_parcelable",
    "//drivers/hdf_core/adapter/uhdf2/model/display/base/bufferhandle_parcelable",
    "//drivers/peripheral/display/standard/composer/test/common",
    "//foundation/communication/ipc/interfaces/innerkits/ipc_core/include",
    "//foundation/graphic/graphic_2d/utils/buffer_handle/export",
    "//drivers/interface/display/command_pack",
    "//drivers/interface/display/include",
    "//drivers/interface/display",
    "//drivers/interface/gralloc",
    "//drivers/peripheral/base",
    "common",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [
    "create_layer_fuzzer.cpp",
  ]
  deps = [
    "//drivers/peripheral/display/standard/composer/test/common:disp_dev_hdi_test_common",
  ]

  external_deps = [
    "hdf_core:libhdf_host",
    "hdf_core:libhdf_ipc_adapter",
    "hdf_core:libhdf_utils",
    "hdf_core:libhdi",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_single",
    "utils_base:utils",
    "hdf_core:libdisplay_buffer_hdi_impl",
    "hdf_core:libdisplay_composer_hdi_impl",
    "drivers_interface_display:display_buffer_idl_headers",
    "drivers_interface_display:display_composer_idl_headers",
  ]
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [ ":CreateLayerFuzzTest" ]
}
