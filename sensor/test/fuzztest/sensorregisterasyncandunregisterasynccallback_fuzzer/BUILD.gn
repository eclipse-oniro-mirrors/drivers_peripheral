  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  sources = [ "sensorregisterasyncandunregisterasynccallback_fuzzer.cpp" ]

  deps = [ "../../../hal:hdi_sensor" ]

  external_deps = [
    "c_utils:utils",
    "drivers_interface_sensor:libsensor_proxy_2.1",
    "hdf_core:libhdf_utils",
    "hilog:libhilog",
    "ipc:ipc_single",
  ]
