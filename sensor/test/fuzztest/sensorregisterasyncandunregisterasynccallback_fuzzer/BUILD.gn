ohos_fuzztest("SensorRegisterAsyncAndUnregisterAsyncCallbackFuzzTest") {
  module_out_path = module_output_path

  fuzz_config_file = "../sensorregisterasyncandunregisterasynccallback_fuzzer"

  include_dirs = [
    "../sensorregisterasyncandunregisterasynccallback_fuzzer",
