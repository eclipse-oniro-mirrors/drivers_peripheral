import("//build/ohos.gni")
import("//build/test.gni")

module_output_path = "drivers_peripheral_audio/audio"

ohos_unittest("hdf_audio_effect_benchmark_test") {
  module_out_path = module_output_path
  sources = [
    "audio_effectcontrol_benchmarktest.cpp",
    "audio_effectmodel_benchmarktest.cpp",
  ]
  cflags = [
    "-Wall",
    "-Wextra",
    "-Werror",
    "-fsigned-char",
    "-fno-common",
    "-fno-strict-aliasing",
  ]

  deps = [
    "//third_party/benchmark",
    "//third_party/bounds_checking_function:libsec_shared",
    "//third_party/googletest:gtest_main",
  ]

  include_dirs = []

  external_deps = [
    "c_utils:utils",
    "drivers_interface_audio:effect_idl_headers",
    "drivers_interface_audio:libeffect_proxy_1.0",
    "hdf_core:libhdf_utils",
    "hiviewdfx_hilog_native:libhilog",
  ]
  external_deps += [ "ipc:ipc_single" ]
}
