import("//build/ohos.gni")

if (!defined(ohos_lite)) {
  ohos_shared_library("effect_model_service_1.0") {
    sources = [
      "../config/src/parse_effect_config.c",
      "src/effect_control.c",
      "src/effect_core.c",
      "src/effect_model.c",
    ]

    include_dirs = [
      "include",
      "//third_party/bounds_checking_function/include",
      "../config/include/",
      "//third_party/cJSON/",
    ]

    defines = []
    deps = [ "//third_party/cJSON:cjson" ]

    if (is_standard_system) {
      external_deps = [
        "c_utils:utils",
        "drivers_interface_audio:effect_idl_headers",
        "hdf_core:libhdf_utils",
        "hilog:libhilog",
      ]
    } else {
      external_deps = [ "hilog:libhilog" ]
    }

    install_images = [ chipset_base_dir ]
    subsystem_name = "hdf"
    part_name = "drivers_peripheral_audio"
  }
}
