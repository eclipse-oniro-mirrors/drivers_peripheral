if (!defined(ohos_lite)) {
  import("//build/test.gni")
  import("//drivers/hdf_core/adapter/uhdf2/hdi.gni")
}
import("//drivers/peripheral/audio/audio.gni")

if (!defined(ohos_lite)) {
  module_output_path = "drivers_peripheral_audio/audio"

  ohos_systemtest("hdf_audio_idlhdi_capture_test") {
    module_out_path = module_output_path
    public_deps = [ "//drivers/interface/audio/v1_0:libaudio_proxy_1.0" ]
    sources = [
      "../../../common/hdi_service_common/src/hdi_service_common.cpp",
      "src/audio_idl_hdicapture_attr_test.cpp",
      "src/audio_idl_hdicapture_control_test.cpp",
      "src/audio_idl_hdicapture_scene_test.cpp",
      "src/audio_idl_hdicapture_test.cpp",
      "src/audio_idl_hdicapture_volume_test.cpp",
    ]
    include_dirs = [ "//drivers/peripheral/audio/test/systemtest/common/hdi_service_common/include" ]
    if (is_standard_system) {
      external_deps = [
        "hdf_core:libhdf_utils",
        "hiviewdfx_hilog_native:libhilog",
      ]
    } else {
      external_deps = [ "hilog:libhilog" ]
    }
    deps = [
      "//third_party/googletest:gmock_main",
      "//third_party/googletest:gtest_main",
    ]
    defines = []
    if (enable_audio_adm_passthrough) {
      defines += [ "AUDIO_ADM_PASSTHROUGH" ]
    }
    if (enable_audio_adm_service) {
      defines += [ "AUDIO_ADM_SERVICE" ]
    }
    if (drivers_peripheral_audio_alsa_lib == true) {
      defines += [ "ALSA_LIB_MODE" ]
    }
  }
}
