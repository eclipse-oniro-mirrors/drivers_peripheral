import("//build/ohos.gni")
import("//drivers/hdf_core/adapter/uhdf2/hdi.gni")
import("//drivers/peripheral/audio/audio.gni")

ohos_shared_library("audio_path_select") {
  sources = [
    "//drivers/peripheral/audio/hal/pathselect/src/audio_pathselect.c",
    "//drivers/peripheral/audio/hdi_service/primary_impl/src/audio_common.c",
    "//third_party/cJSON/cJSON.c",
  ]

  include_dirs = [
    "//drivers/peripheral/audio/hdi_service/primary_impl/include",
    "//drivers/peripheral/audio/hal/pathselect/include",
    "//third_party/cJSON",
    "//third_party/bounds_checking_function/include",
    "//drivers/hdf_core/adapter/uhdf2/shared/include",
  ]

  defines = [ "IDL_MODE" ]
  if (enable_audio_hal_hdf_log) {
    defines += [ "AUDIO_HDF_LOG" ]
  }
  if (drivers_peripheral_audio_alsa_lib) {
    defines += [ "ALSA_LIB_MODE" ]
  }
  if (is_standard_system) {
    external_deps = [
      "c_utils:utils",
      "drivers_interface_audio:audio_idl_headers",
      "hdf_core:libhdf_utils",
      "hiviewdfx_hilog_native:libhilog",
    ]
  } else {
    external_deps = [ "hilog:libhilog" ]
  }

  install_images = [ chipset_base_dir ]
  subsystem_name = "hdf"
  part_name = "drivers_peripheral_audio"
}
