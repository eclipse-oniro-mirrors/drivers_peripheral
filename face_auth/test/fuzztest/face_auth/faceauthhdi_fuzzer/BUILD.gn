import("//build/config/features.gni")
import("//build/test.gni")

ohos_fuzztest("FaceAuthHdiFuzzTest") {
  module_out_path = "hdf/face_auth"
  fuzz_config_file = "../faceauthhdi_fuzzer"
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  include_dirs = [
    "../../../../hdi_service/include",
    "../../../../common/logs",
  ]

  sources = [
    "face_auth_hdi_fuzzer.cpp",
    "iam_fuzz_test.cpp",
  ]

  deps = [ "../../../../hdi_service:libface_auth_interface_service_1.1" ]

  external_deps = [
    "c_utils:utils",
    "drivers_interface_face_auth:face_auth_idl_headers",
    "graphic_chipsetsdk:surface",
    "hilog_native:libhilog",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
  ]

  if (defined(global_parts_info.graphic_graphic_standard)) {
    external_deps += [
      "graphic_chipsetsdk:surface",
      "graphic_standard:surface",
    ]
  }

  subsystem_name = "hdf"
  part_name = "drivers_peripheral_face_auth"
}
