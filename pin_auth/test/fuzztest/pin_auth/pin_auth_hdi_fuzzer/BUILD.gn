  fuzz_config_file =
      "//drivers/peripheral/pin_auth/test/fuzztest/pin_auth/pin_auth_hdi_fuzzer"
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
