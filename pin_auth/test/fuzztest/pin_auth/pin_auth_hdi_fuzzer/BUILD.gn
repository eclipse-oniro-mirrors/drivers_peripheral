    "//drivers/peripheral/pin_auth/hdi_service/inc",
    "//drivers/peripheral/pin_auth/hdi/main/inc",
    "//base/user_iam/user_auth/common/logs",
  ]

  sources = [ "pin_auth_hdi_fuzzer.cpp" ]

  deps = [
    "//base/user_iam/user_auth/common:iam_test",
    "//drivers/peripheral/pin_auth/hdi_service:libpin_auth_interface_service_1.0",
    "//utils/native/base:utils",
  ]

  external_deps = [
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "utils_base:utils",
  ]
}
